<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleCRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimpleCRM.styles.css" asp-append-version="true" />
    <style>
        .dropbtn {
            background-color: #3069a6;
            color: white;
            padding: 8px;
            font-size: 20px;
            border: none;
            font-weight:bolder;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 100px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: center;
                font-size: 16px;
                font-weight: bold;

            }

                .dropdown-content a:hover {
                    background-color: #ddd;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #285e99;
        }
    </style>

</head>
<header>
    <div class="dropdown">
    <button class="dropbtn">Simple CRM</button>
    <div class="dropdown-content">
            <a href="https://localhost:7103/Home/Home">Home</a>
            <a href="https://localhost:7103/Home/Create">Create</a>
            <a href="https://localhost:7103/Home/Todo">To Do</a>
            <a href="https://localhost:7103/Home/Search">Search</a>
    </div>
</div>
</header>
<br />
<body style='background:#E0F0FA'>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
</body>
</div>
</html>
